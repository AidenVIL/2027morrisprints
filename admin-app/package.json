{
  "name": "3d-quote-admin",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build:main": "tsc -p tsconfig.build.json",
    "build": "vite build && npm run build:main",
    "dist": "npm run build && electron-builder --win",
    "start": "electron ."
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.25.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "@chakra-ui/react": "^2.7.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "framer-motion": "^10.12.8",
    "lucide-react": "^0.278.0",
    "recharts": "^2.4.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.28",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.2",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "typescript": "^5.1.6",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "publish": [
    {
      "provider": "github"
    }
  ],
  
  "build": {
    "appId": "com.morrisprints.admin",
    "productName": "MorrisPrints Admin",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "node_modules/**",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
